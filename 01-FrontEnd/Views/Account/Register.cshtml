@model FrontEnd.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Registro de usuario";
}

<a href="@Url.Action("Index","Usuarios")"><i class="fas fa-arrow-circle-left"></i> Regresar</a>
<hr />

<div class="card o-hidden border-0 shadow-lg my-0">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Registro de un nuevo usuario.</h1>
                    </div>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Nombre, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Apellido, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Rol, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.Rol,
                               (SelectList)ViewBag.Name,
                               new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Email, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Password, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <button class="btn btn-success">Crear</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
