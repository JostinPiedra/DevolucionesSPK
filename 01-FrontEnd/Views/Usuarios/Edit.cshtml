@model UsuarioViewModel
@{ 
    ViewBag.Title = "Editar usuario";
    var role = ViewBag.Role;
}

<script type="text/javascript">
    var getRole = document.getElementById('role');
    console.log(getRole);
    //$(document).ready(function () {
    //    console.log(getRole);
    //});
</script>

<a href="@Url.Action("Index","Usuarios")"><i class="fas fa-arrow-circle-left"> Regresar</i></a>
<hr />

<div class="card o-hidden border-0 shadow-lg my-0">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Editar: @(Model.Nombre + " " + Model.Apellido)</h1>
                    </div>
                    @using (Html.BeginForm("Edit", "Usuarios", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <input type="hidden" id="role" value="@role"/>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Nombre, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Apellido, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Rol, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.Rol, 
                               new SelectList(Model.RolesList, "Id", "Name"),
                               new { @class = "form-control form-control-sm" })
                            </div>
                            @*<div class="col-md-10">
                                @Html.DropDownListFor(m => m.Rol,
                               (SelectList)ViewBag.Name,
                               new { @class = "form-control form-control-sm" })
                            </div>*@
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                @Html.LabelFor(m => m.Email, new { @class = "col-form-control" })
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <button class="btn btn-success">Guardar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>